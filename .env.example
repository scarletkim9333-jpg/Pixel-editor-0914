# Pixel Editor Environment Variables
# Copy this file to .env.local and fill in your values

# === Development Settings ===
VITE_DEBUG_MODE=true
VITE_API_URL=http://localhost:3001/api

# === Image Processing ===
VITE_COMPRESSION_QUALITY=85
VITE_THUMBNAIL_SIZE=200
VITE_MAX_FILE_SIZE=10485760

# === Storage Configuration ===
# Options: temporary | registered | premium
VITE_STORAGE_TIER=temporary
VITE_MAX_GALLERY_ITEMS=50

# === Supabase Configuration ===
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# === TossPayments ===
VITE_TOSS_CLIENT_KEY=your_toss_client_key

# === AI Services ===
VITE_GEMINI_API_KEY=your_gemini_api_key
VITE_FAL_KEY=your_fal_api_key

# === Feature Flags ===
VITE_ENABLE_GALLERY=true
VITE_ENABLE_SHARING=true
VITE_ENABLE_EXAMPLES=true
VITE_ENABLE_COMPRESSION=true

# === Performance ===
VITE_LAZY_LOADING=true
VITE_VIRTUAL_SCROLLING=true
VITE_CACHE_ENABLED=true